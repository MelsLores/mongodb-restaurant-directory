{
  "name": "mongodb-restaurant-directory-api",
  "version": "3.0.0",
  "description": "Enterprise RESTful API for restaurant directory management with MongoDB Atlas",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "seed": "node scripts/direct-import.js",
    "performance": "node scripts/performance-test.js",
    "demo:performance": "node scripts/demo-performance-test.js",
    "docker:build": "docker build -t restaurant-api:latest .",
    "docker:run": "docker run -p 3000:3000 restaurant-api:latest",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "k8s:deploy": "kubectl apply -f k8s-deployment.yaml",
    "k8s:delete": "kubectl delete -f k8s-deployment.yaml",
    "scale:test": "npm run performance && echo 'Scalability test completed'",
    "scale:demo": "npm run demo:performance && echo 'Demo completed successfully'",
    "sustainability:check": "node -e \"console.log('ðŸŒ± Checking sustainability metrics...'); require('./api/middleware/performanceMonitor').checkSystemHealth()\"",
    "health:check": "curl -f http://localhost:3000/health || exit 1",
    "backup": "node scripts/backup.js",
    "indexes": "node scripts/create-indexes.js"
  },
  "keywords": [
    "restaurant",
    "api",
    "mongodb",
    "express",
    "atlas",
    "restful"
  ],
  "author": "MelsLores",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
